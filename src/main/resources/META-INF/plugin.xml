<idea-plugin>
    <id>at.alirezamoh.idea_whisperer_for_laravel</id>

    <name>Idea Whisperer For Laravel</name>

    <vendor email="" url="https://github.com/Alireza-Moh/idea-whisperer-for-laravel">Idea Whisperer For Laravel</vendor>

    <description>Idea Whisperer For Laravel enables you to develop faster</description>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php.blade</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="NotificationGroup" displayType="BALLOON"/>

        <projectConfigurable parentId="language" instance="at.alirezamoh.idea_whisperer_for_laravel.settings.SettingConfigurable" id="idea_whisperer_for_laravel_settings" displayName="Idea Whisperer For Laravel" nonDefaultProject="true"/>
        <projectService serviceImplementation="at.alirezamoh.idea_whisperer_for_laravel.settings.SettingsState"/>

        <statusBarWidgetFactory implementation="at.alirezamoh.idea_whisperer_for_laravel.extension.LaravelVersion" id="LaravelVersion" order="first" />

        <psi.referenceContributor  language="PHP" implementation="at.alirezamoh.idea_whisperer_for_laravel.config.ConfigReferenceContributor"/>
        <psi.referenceContributor  language="PHP" implementation="at.alirezamoh.idea_whisperer_for_laravel.blade.BladeReferenceContributor"/>
        <psi.referenceContributor  language="PHP" implementation="at.alirezamoh.idea_whisperer_for_laravel.routing.RouteReferenceContributor"/>
        <psi.referenceContributor  language="PHP" implementation="at.alirezamoh.idea_whisperer_for_laravel.gate.GateReferenceContributor"/>
<!--        <psi.referenceContributor  language="PHP" implementation="at.alirezamoh.idea_whisperer_for_laravel.eloquent.relation.RelationReferenceContributor"/>-->

        <completion.contributor language="PHP" implementationClass="at.alirezamoh.idea_whisperer_for_laravel.formRequest.RuleValidationCompletionContributor"/>
        <completion.contributor language="PHP" implementationClass="at.alirezamoh.idea_whisperer_for_laravel.eloquent.TableCompletionContributor"/>
        <completion.contributor language="PHP" implementationClass="at.alirezamoh.idea_whisperer_for_laravel.eloquent.FieldCompletionContributor"/>
        <completion.contributor language="PHP" implementationClass="at.alirezamoh.idea_whisperer_for_laravel.eloquent.relation.RelationCompletionContributor"/>

        <codeInsight.template.postfixTemplateProvider language="PHP" implementationClass="at.alirezamoh.idea_whisperer_for_laravel.postfixes.dd.DDPostfixProvider" />
    </extensions>

    <actions>
        <group id="at.alirezamoh.idea_whisperer_for_laravel.Actions" class="at.alirezamoh.idea_whisperer_for_laravel.actions.StartPluginAction" text="Idea Whisperer For Laravel" popup="true" description="The start point of the laravel plugin helper">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ActionChooserAction" text="Search for Code Generation" icon="/icons/laravelIcon.svg">
                <keyboard-shortcut first-keystroke="control shift PERIOD" keymap="$default" replace-all="false" />
            </action>

            <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.GenerateHelperMethodsAction" text="Generate Helper Methods" icon="/icons/laravelIcon.svg">
            </action>

            <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.EloquentNonGroupAction" text="Create Eloquent Model" icon="/icons/laravelIcon.svg">
            </action>

            <separator />

            <group id="at.alirezamoh.idea_whisperer_for_laravel.AllCodeGenerationActionsGroupAction" popup="true" icon="/icons/laravelIcon.svg" text="Available Code Generations">
                &gt;

                <action id="create.EloquentAction" class="at.alirezamoh.idea_whisperer_for_laravel.actions.EloquentAction" text="Create Eloquent Model" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.MigrationAction" text="Create Migration" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ControllerAction" text="Create Controller" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.DBSeederAction" text="Create Database Seeder" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ConfigAction" text="Create Config File" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.BladeComponentAction" text="Create Blade Component" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ConsoleAction" text="Create Console Command" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ViewAction" text="Create View" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.JobAction" text="Create Job" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ValidationRuleAction" text="Create Validation Rule" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.PolicyAction" text="Create Policy" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ObserverAction" text="Create Observer" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.MailableAction" text="Create Mailable" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.ExceptionAction" text="Create Exception" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.EventListenerAction" text="Create Event Listener" icon="/icons/laravelIcon.svg">
                </action>

                <action class="at.alirezamoh.idea_whisperer_for_laravel.actions.MiddlewareAction" text="Create Middleware" icon="/icons/laravelIcon.svg">
                </action>
            </group>
        </group>
    </actions>
</idea-plugin>